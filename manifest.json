{
  "manifest_version": 3,
  "name": "SmartRead AI",
  "version": "1.0.0",
  "description": "Enhance your reading experience with AI-powered summaries, Q&A, and focus tools.",
  "permissions": ["storage", "activeTab", "scripting", "tts"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon128.png",
    "32": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/content-script.tsx"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
